#:kivy 1.11.1

<Label>:
#    all_labels: all_labels

    # this is how you apply generic formatting to everything tagged Label
    id: "all_labels"
    halign: 'left'
    valign: 'center'
    text_size: self.size
#    text_size: [None, None]
#    texture_size: self.size
    font_size: '25sp'
    padding: ('10sp', '10sp')
    text: ""

<Button>:
    # Formats all 'Button' tags.

    font_size: '15sp'
    halign: "center"

<ColorLabel@Label>:
    color: 1,0,0,1

<MenuBar@BoxLayout>:
    id: "menu_layout"
    size_hint_y: .2

<DataWindow>:
    # these are global variables to reference objects below
    # format: [variable name in code]: [id name in kv file]
    fav_list_name: fav_list_name
    sys_name: sys_name
    dept_name: dept_name
    site_name: site_name
    tgid_name: tgid_name
    unit_ids: unit_ids
    unit_ids_name_tag: unit_ids_name_tag
    transmission_start: trans_begins
    transmission_end: trans_ends
    total_time: tot_time

    play_stop_button: stop_play
    scan_status_button: scanner_status

#    BoxLayout:
    GridLayout:
        cols: 1
        id: 'main_container'
#        top: root.top
        width: root.width
        height: root.height
#        center_y: root.center_y
#        width: 800
#        height: 400
#        center: root.center
#        orientation: 'vertical'

        BoxLayout:
            id: "large_text_layout"
    #        top: root.top
#            width: root.width
#            height: root.height
    #        center_y: root.center_y
#            width: 800
#            height: 200
    #        center: root.center
            orientation: 'vertical'

            canvas:
                Color:
                    rgba: (1, 1, 1, 0.15)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                id: fav_list_name
                color: 1, 1, 0, 0.5
                text: "Favorites List Name----*-------*-------*-------*-------*-------*"
                font_size: '30sp'

            ColorLabel:
                id: sys_name
                text: "System:Name"
                font_size: '25sp'

            Label:
                id: dept_name
                text: "Department:Name"

            Label:
                id: tgid_name
                text: "TGID:Name"

            Label:
                id: site_name
                text: "Site:Name"


            Label:
                id: unit_ids
                text: "UnitIds"

            Label:
                id: unit_ids_name_tag
                text: "UnitIds:NameTag"


            BoxLayout:
                orientation: 'horizontal'


                Label:
                    id: trans_begins
                    text: "Transmission Start Time"
                    font_size: '15sp'

                Label:
                    id: trans_ends
                    text: "Transmission End Time"
                    font_size: '15sp'

                Label:
                    id: tot_time
                    text: "Total Time"
                    font_size: '15sp'

        MenuBar:  #
            id: "menu_layout"
#            height: '300sp'
#            size_hint_y: .2

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: "Get Metadata"
                    on_press: root.btn()

                BoxLayout:
                    orientation: 'horizontal'

                    Button:
                        id: stop_play
                        text: "Play Wav"
                        on_press: root.play_stop_btn()

                    Button:
                        text: "Stop"
                        on_press: root.stop_btn()

                BoxLayout:
                    orientation: 'horizontal'

                    Button:
                        id: scanner_status
                        text: "Connect to Scanner"
                        on_press: root.scanner_status_btn()

                    Button:
                        text: "Disconnect"
                        on_press: root.scanner_disconnect_btn()

                    Button:
                        text: "playback"
                        on_press:
                            root.manager.transition.direction = 'left'
                            root.manager.current = 'playback'

<PlaybackScreen>:
    BoxLayout:
        Button:
            text: 'Back to Menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'datawindow'