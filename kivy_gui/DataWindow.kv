#:kivy 1.11.1

<Label>:
    # this is how you apply generic formatting to objects
    font_size: 20
    halign: 'left'
    left: 20

<GridLayout>:
    cols: 1

    Label:
        text: "I'm gridded!"

<DataWindow>:
    # these are global variables to reference objects below
    # format: [variable name in code]: [id name in kv file]
    fav_list_name: fav_list_name
    sys_name: sys_name
    dept_name: dept_name
    site_name: site_name
    unit_ids: unit_ids
    unit_ids_name_tag: unit_ids_name_tag

    # canvas only contains graphics instructions
    canvas:

    GridLayout:
#        center: root.width / 2, root.height / 2
        left: 0
        top: root.height

        Label:
            text: "Mee too!"

    Label:
        id: fav_list_name
        size: root.width * 0.9, root.height * 0.1
        top: root.top - 20
        left: 20
        text_size: self.size
        halign: 'left'
        color: 1, 1, 0, 0.5
        font_size: 16
#        center_x:  64  # not what I want

        text: "Favorites List Name----*-------*-------*-------*-------*-------*"

    Label:
        id: sys_name
        font_size: 14
        left: root.width * 3 / 4
        top: root.height * 0.8
        text: "System:Name"

    Label:
        id: dept_name
        top: root.height * 0.5
        text: "Department:Name"

    Label:
        id: site_name
        text: "Site:Name"

    Label:
        id: unit_ids
        text: "UnitIds"

    Label:
        id: unit_ids_name_tag
        text: "UnitIds:NameTag"

    Button:
        text: "push me"
        on_press: root.btn()