#:kivy 1.11.1

#<BoxLayout>:
#
#
#
<Label>:
    # this is how you apply generic formatting to everything tagged Label
    id: all_labels
    halign: 'left'
    valign: 'center'
    text_size: self.size
    padding: (10, 0)
    # canvas has it's own sort of special syntax
#    canvas:
#        Color:
#            rgba: (1,1,1,0.2)
#        Rectangle:
#            size: self.size
#            pos: self.pos

<Button>
    # Formats all 'Button' tags.

    # center all buttons
    halign: "center"

<DataWindow>:
    # these are global variables to reference objects below
    # format: [variable name in code]: [id name in kv file]
    fav_list_name: fav_list_name
    sys_name: sys_name
    dept_name: dept_name
    site_name: site_name
    unit_ids: unit_ids
    unit_ids_name_tag: unit_ids_name_tag

    # canvas only contains graphics instructions
#    size: (800, 400)
#    size_hint_y: 0.8
#
#    canvas:
#        Color:
#            rgba: (1,1,1,0.6)
#        Rectangle:
#            size: (800, 400)

    BoxLayout:
#        top: root.top
#        width: root.width
#        height: root.height
#        center_y: root.center_y
        width: 800
        height: 400
        center: root.center
        orientation: 'vertical'
        canvas:
            Color:
                rgba: (1, 1, 1, 0.15)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            id: fav_list_name
            color: 1, 1, 0, 0.5
            text: "Favorites List Name----*-------*-------*-------*-------*-------*"

        Label:
            id: sys_name
            text: "System:Name"

        Label:
            id: dept_name
            text: "Department:Name"

        Label:
            id: site_name
            text: "Site:Name"

        Label:
            id: unit_ids
            text: "UnitIds"

        Label:
            id: unit_ids_name_tag
            text: "UnitIds:NameTag"

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: "Get Metadata"
                on_press: root.btn()

            Button:
                text: "Not Used"

            Button:
                text: "Not Used"