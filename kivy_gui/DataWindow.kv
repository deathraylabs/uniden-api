#:kivy 1.11.1

<BoxLayout>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (1, 0, 1, 0.2)
        Rectangle:
            size: self.size
            pos: self.pos


<Label>:
    # this is how you apply generic formatting to objects
    font_size: 30
    halign: 'left'
    left: 0
    text_size: self.size
    # canvas has it's own sort of special syntax
    canvas:
        Color:
            rgba: (1,1,1,0.2)
        Rectangle:
            size: self.size
            pos: self.pos


<DataWindow>:
    # these are global variables to reference objects below
    # format: [variable name in code]: [id name in kv file]
    fav_list_name: fav_list_name
    sys_name: sys_name
    dept_name: dept_name
    site_name: site_name
    unit_ids: unit_ids
    unit_ids_name_tag: unit_ids_name_tag

    # canvas only contains graphics instructions


    BoxLayout:
        top: root.height
        width: root.width

        Label:
            text: "Mee too!"

        Label:
            id: fav_list_name
#            size: root.width * 0.9, root.height * 0.1
#            top: root.top - 20
#            left: 20
#            halign: 'left'
            color: 1, 1, 0, 0.5
#            font_size: 16
    #        center_x:  64  # not what I want

            text: "Favorites List Name----*-------*-------*-------*-------*-------*"

    Label:
        id: sys_name
#        font_size: 14
#        left: root.width * 3 / 4
#        top: root.height * 0.8
        text: "System:Name"

    Label:
        id: dept_name
        text: "Department:Name"

    Label:
        id: site_name
        text: "Site:Name"

    Label:
        id: unit_ids
        text: "UnitIds"

    Label:
        id: unit_ids_name_tag
        text: "UnitIds:NameTag"

    Button:
        text: "push me"
        on_press: root.btn()