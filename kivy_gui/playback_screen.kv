#:kivy 1.11.1

<PlaybackScreen>:
    play_stop_button: stop_play
    text_display: text_display
    cmd_input_box: command_input

    GridLayout:
        cols: 2
        id: 'main_container'
        width: root.width
        height: root.height

        BoxLayout:
            id: large_text_layout
            orientation: 'vertical'

            canvas:
                Color:
                    rgba: (1, 1, 1, 0.15)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ScrollView:
#                do_scroll_x: True
#                do_scroll_y: True
                do_scroll: (False, True)

                Label:
                    id: text_display
#                    text: "info display"
                    font_size: 36
                    valign: "top"

                    size_hint: (1, None)
                    text_size: (self.width, None)
                    height: self.texture_size[1]
                    padding: 10, 10
                    text:
                        'really some amazing text\n' * 100




        MenuBar:  #
            id: "menu_layout"
            size_hint_x: .5

            BoxLayout:
                orientation: 'vertical'

                TextInput:
                    id: command_input
                    text: "GLT,FL"
                    multiline: False
                    valign: "center"
                    size_hint_y: .2
                    write_tab: False
                    on_focus: self.select_all()
                    # this is such a hack
                    on_focus: self.focus = True
                    on_touch_down: self.select_all()

#                    on_focus: self.select_all()
                    on_text_validate: root.command_input(args[0])

                BoxLayout:
                    orientation: 'horizontal'

                    Button:
                        id: stop_play
#                        text: "Play Wav"
#                        on_press: root.play_stop_btn()
#                        on_press: app.sm.datawindow.zinger()

                    Button:
#                        text: "Stop"
#                        on_press: root.stop_btn()

                BoxLayout:
                    orientation: 'horizontal'

                    Button:
                        id: scanner_status
                        text: "Connect to Scanner"
                        on_press: root.scanner_status_btn()

                    Button:
                        text: "Stop\nDisplay"
                        on_press: root.scanner_disconnect_btn()

                    Button:
                        text: 'Back to Menu'
                        on_press:
                            root.manager.transition.direction = 'right'
                            root.manager.current = 'datawindow'