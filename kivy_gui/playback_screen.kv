#:kivy 1.11.1


# Please note the root.manager.current: this is how
# you can control the ScreenManager from kv. Each screen has by default a
# property manager that gives you the instance of the ScreenManager used.

<PlaybackScreen>:
#    play_stop_button: stop_play
#    text_display: _text_display
    cmd_input_box: command_input
    large_text_layout: _large_text_layout
    scroll_view_layout: _scroll_view

    GridLayout:
        cols: 2
        id: _main_container
        width: root.width
        height: root.height

#        RelativeLayout:

        LargeTextDisplayPanel:
            id: _large_text_layout

#            BoxLayout:
#                orientation: "vertical"

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                GridLayout:
                    id: _scroll_view
                    cols: 1
                    row_default_height: 100  # change to text size
                    size_hint_x: 1
                    size_hint_y: None
                    height: self.minimum_height

#            ScrollingTextDisplayPanel:
#                id: _text_display
#                text: "Scanner response..."


        BoxLayout:
            id: "right_side"
            orientation: "vertical"
            size_hint_x: .4

            MenuBar:
                id: "menu_layout"

                BoxLayout:
                    id: "button_row_container"
                    orientation: 'vertical'

                    # ------------ 1 first row ------------- #
                    CommandLine:
                        id: command_input
                        text: "GLT,FL"
                        on_text_validate:
                            root.command_input(args[0])
                            self.cancel_selection() # gets rid of handles


                    # ------------ 2 second row ------------- #
                    BoxLayout:
                        id: "second_row"
                        orientation: 'horizontal'

                        Button:
                            id: "menu_view"
                            text: "Get Menu View"
                            on_press: root.display_raw_scanner_output("MSI")

                        Button:
                            id: "gsi_output"
                            text: "View GSI Info"
                            on_release: root.display_raw_scanner_output("GSI")

                        Button:
                            id: _fqk_status
                            text: "View FQK Status"
                            on_release:
#                                root.display_raw_scanner_output("FQK")
                                root.fav_qk_status()


                    # ---------- third row ---------- #
                    BoxLayout:
                        id: "third_row"
                        orientation: 'horizontal'

                        Button:
                            id: _hide_popup

                            text: "broken"
                            on_release:
                                # moves whole window offscreen
                                root.btn()

                        Button:
                            id: _sqk_status
                            text: "View SQK Status"
                            on_release: root.sys_qk_status(fav_list="8")

                        Button:
                            id: _dqk_status
                            text: "View DQK Status"
                            on_release:
                                root.display_raw_scanner_output("DQK,0,0")

                    BoxLayout:
                        id: "fourth_row"
                        orientation: 'horizontal'

#                        Button:
#                            id: _add_label
#                            text: "add a label"
#                            on_release: root.send_text_to_screen_as_labels("janks")

                    BoxLayout:
                        id: "fifth_row"
                        orientation: 'horizontal'

                        Button:

                        Button:


                    BoxLayout:
                        id: "sixth_row"
                        orientation: 'horizontal'

                        Button:
                            text: 'Main'
                            on_press:
#                                root.manager.transition.direction = 'right'
                                root.manager.current = 'datawindow'

                        Button:
                            text: 'Info'
                            on_press:
#                                root.manager.transition.direction = 'right'
                                root.manager.current = 'playback'

                        Button:
                            text: "menu"
                            on_press: root.manager.current = 'popup'