#:kivy 1.11.1
#:import main main

<Label>:
    # this is how you apply generic formatting to everything tagged Label
    id: "all_labels"
    halign: 'left'
    valign: 'center'
    text_size: self.size
    font_size: '25sp'
    padding: ('10sp', '10sp')
    text: ""
    color: 1,1,1,1


<Button>:
    # Formats all 'Button' tags.
    font_size: '15sp'
    halign: "center"

<NumericKeypad@Button>:


<TouchArea@Button>:
    halign: 'left'
    valign: 'center'
    text_size: self.size
    font_size: '25sp'
    padding: ('10sp', '10sp')
    text: ""
    color: 1,1,1,1

    background_normal: ""
    background_down: ""
    background_color: (1,1,1,0)


<BlankLabel@Label>:
    # sets properties for blank label placeholders
    id: blank_label
    canvas:
        Color:
            rgba: (1, 1, 1, 0.15)
        Rectangle:
            size: self.size
            pos: self.pos


<MenuBar@BoxLayout>:


<CommandLine@TextInput>:
    multiline: False
    valign: "center"

    write_tab: False
    on_focus: self.select_all()
    on_touch_up: self.select_all()


<ScrollingTextDisplayPanel@Label>:
    id: "scroll_base_formatting"
    font_size: "12sp"
    valign: "top"
    size_hint: (1, None)
    text_size: (self.width, 15)
    height: self.texture_size[1]
    padding: 10, 10


<LargeTextDisplayPanel@BoxLayout>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (.15, .15, .15, 1)
        Rectangle:
            size: self.size
            pos: self.pos

<RightSidePanel@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: .4


