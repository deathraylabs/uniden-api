#:kivy 1.11.1


<Label>:
    # this is how you apply generic formatting to everything tagged Label
    id: "all_labels"
    halign: 'left'
    valign: 'center'
    text_size: self.size
    font_size: '25sp'
    padding: ('10sp', '10sp')
    text: ""
    color: 1,1,1,1


<Button>:
    # Formats all 'Button' tags.
    font_size: '15sp'
    halign: "center"

<NumericKeypad@Button>:


<TouchArea@Button>:
    halign: 'left'
    valign: 'center'
    text_size: self.size
    font_size: '25sp'
    padding: ('10sp', '10sp')
    text: ""
    color: 1,1,1,1

    background_normal: ""
    background_down: ""
    background_color: (1,1,1,0)


<BlankLabel@Label>:
    # sets properties for blank label placeholders
    id: blank_label
    canvas:
        Color:
            rgba: (1, 1, 1, 0.15)
        Rectangle:
            size: self.size
            pos: self.pos


<MenuBar@BoxLayout>:


<CommandLine@TextInput>:
    multiline: False
    valign: "center"

    write_tab: False
    on_focus: self.select_all()
    on_touch_up: self.select_all()


<ScrollingTextDisplayPanel@Label>:
    id: "scroll_base_formatting"
    font_size: "18sp"
    valign: "top"
    size_hint: (1, None)
    text_size: (self.width, 15)
    height: self.texture_size[1]
    padding: 10, 10

<LargeTextDisplayPanel@BoxLayout>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (.15, .15, .15, 1)
        Rectangle:
            size: self.size
            pos: self.pos

<RightSidePanel>:
    orientation: 'vertical'
    size_hint_x: .4
    id: _right_side

#    command_input: _command_input
    scan_status_button: _start_disp_btn
    _mute: _mute
    _function_button: _function_button

    MenuBar:
        id: _first_row

#        CommandLine:
#            id: _command_input
#            on_text_validate:
#                root.update_unid(args[0])
#                self.focus = False       # unfocus before cancel sel
#                self.cancel_selection()  # gets rid of handles

#        NumericKeypad:
#            id: _set_unid
#            text: "Set\nUNID"
#            on_release: root.open_unid_menu()

        NumericKeypad:
            id: _system_softkey
            text: "SYSTEM"
            padding: 0, 0
            on_release: root.keypad_press(keypad_key="system")

        NumericKeypad:
            id: _dept_softkey
            text: "DEPT"
            on_release: root.keypad_press(keypad_key="dept")

        NumericKeypad:
            id: _chan_sofkey
            text: "CHAN"
            on_release: root.keypad_press(keypad_key="chan")


    # ----- second row ----- #

    MenuBar:
        id: _second_row

        NumericKeypad:
            id: _vol_up
            text: "vol\nup"
            on_release:
                root.change_vol("up")

        NumericKeypad:
            id: _prev
            text: "prev"
            on_release: root.keypad_press(keypad_key="vleft")

        NumericKeypad:
            id: _next
            text: "next"
            on_release: root.keypad_press(keypad_key="vright")

    # ----- Third row ----- #

    MenuBar:
        id: _third_row

        NumericKeypad:
            id: _vol_down
            text: "vol\ndown"

            on_release:
                root.change_vol("down")

        NumericKeypad:

        NumericKeypad:


    MenuBar:
        id: _fourth_row

        NumericKeypad:
            id: _mute
            text: "mute"
            on_release: root.change_vol("mute")

        BoxLayout:
            id: _start_stop_box
            orientation: "vertical"

            Button:
                id: _start_disp_btn
                text: "Start"
                on_release: root.scanner_disp_start_btn()

            Button:
                id: _stop_disp_btn
                text: "Stop"
                on_release: root.scanner_disp_stop_btn()

        BoxLayout:
            id: _split_button
            orientation: "vertical"

            Button:
                text: 'Info'
                on_release:
                    root.manager.current = 'playback'

            Button:
                id: _quit_app
                text: "Quit"
                on_release: app.stop()

    # ----- sixth row, last row ----- #

    MenuBar:
        id: _sixth_row

        BoxLayout:
            id: "sixth_row"
            orientation: 'horizontal'

            Button:
                text: 'Main'
                on_release:
#                    root.sm.current = 'datawindow'

            NumericKeypad:
                id: _function_button
                text: "func"
                on_release: root.keypad_press(keypad_key="func")

            Button:
                text: "menu"
                on_release: root.keypad_press("menu")

    MenuBar:
        id: _seventh_row

        BoxLayout:
#            id: "sixth_row"
            orientation: 'horizontal'

            NumericKeypad:
                id: _avoid_key
                text: "AVOID"
                on_release: root.keypad_press(keypad_key="avoid")

            NumericKeypad:
                id: _begin_end_recording
                text: "Replay\n(Rec)"
                on_release: root.keypad_press(keypad_key="replay")

            NumericKeypad:
                id: _enter_button
                text: "enter"
                on_press: root.keypad_press("E")